    <StackPanel Grid.Column="2" Orientation="Horizontal">

        <ComboBox
            Width="Auto"
            MinWidth="120"
            VerticalAlignment="Stretch"
            VerticalContentAlignment="Center"
            MaterialDesign:HintAssist.Hint="Default"
            MaterialDesign:TextFieldAssist.HasClearButton="True"
            ItemsSource="{Binding AudioCodecOptions}"
            SelectedItem="{Binding SelectedAudioCodec}"
            Visibility="{Binding IsAudioCodecSelectable, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <ComboBox
            Width="Auto"
            MinWidth="120"
            VerticalAlignment="Stretch"
            VerticalContentAlignment="Center"
            MaterialDesign:HintAssist.Hint="Default"
            MaterialDesign:TextFieldAssist.HasClearButton="True"
